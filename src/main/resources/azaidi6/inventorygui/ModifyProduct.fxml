<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/17.0.6-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="azaidi6.inventorygui.controllers.ModifyProductController">
   <children>
      <VBox>
         <children>
            <HBox prefHeight="450.0" prefWidth="750.0" style="-fx-border-color: black; -fx-border-radius: 10;">
               <children>
                  <VBox>
                     <children>
                        <Label text="Modify Product">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <padding>
                              <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
                           </padding>
                        </Label>
                        <GridPane alignment="CENTER" maxWidth="-Infinity" prefWidth="250.0">
                          <columnConstraints>
                            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="56.0" minWidth="10.0" prefWidth="56.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="110.0" minWidth="10.0" prefWidth="69.0" />
                              <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="64.0" minWidth="10.0" prefWidth="54.0" />
                              <ColumnConstraints hgrow="SOMETIMES" maxWidth="133.0" minWidth="10.0" prefWidth="73.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label text="ID" />
                              <Label text="Name" GridPane.rowIndex="1" />
                              <Label text="Inv Qty" GridPane.rowIndex="2" />
                              <Label text="Price" GridPane.rowIndex="3" />
                              <Label text="Max" GridPane.rowIndex="4" />
                              <Label text="Min" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                              <TextField fx:id="productIDField" disable="true" promptText="Auto Gen - Disabled" GridPane.columnIndex="1" GridPane.columnSpan="2">
                                 <font>
                                    <Font name="System Italic" size="12.0" />
                                 </font></TextField>
                              <TextField fx:id="productNameField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                              <TextField fx:id="productInvField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <TextField fx:id="productPriceField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <TextField fx:id="productMaxField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                              <TextField fx:id="productMinField" GridPane.columnIndex="3" GridPane.rowIndex="4" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                           </VBox.margin>
                        </GridPane>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="TOP_RIGHT" prefHeight="400.0" prefWidth="382.0">
                     <children>
                        <TextField fx:id="searchPartField" onKeyTyped="#onSearch" maxWidth="170.0" prefHeight="25.0" prefWidth="170.0" promptText="Serach by Part ID or Name">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                        <TableView fx:id="partTableA" prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn fx:id="partIdColA" prefWidth="53.0" text="Part ID" />
                            <TableColumn fx:id="partNameColA" prefWidth="77.0" text="Part Name" />
                              <TableColumn fx:id="partInvColA" prefWidth="95.0" text="Inventory Level" />
                              <TableColumn fx:id="partPriceColA" prefWidth="129.0" text="Price/ Cost per Unit" />
                          </columns>
                        </TableView>
                        <Button fx:id="addPartButton" mnemonicParsing="false" onMouseClicked="#onAddPartButtonClicked" text="Add">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="50.0" top="10.0" />
                           </VBox.margin>
                        </Button>
                        <TableView fx:id="partTableB" prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn fx:id="partIdColB" prefWidth="53.0" text="Part ID" />
                            <TableColumn fx:id="partNameColB" prefWidth="77.0" text="Part Name" />
                              <TableColumn fx:id="partInvColB" prefWidth="95.0" text="Inventory Level" />
                              <TableColumn fx:id="partPriceColB" prefWidth="129.0" text="Price/ Cost per Unit" />
                          </columns>
                        </TableView>
                        <Button fx:id="removePartButton" onMouseClicked="#onRemovePartButtonClicked" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" text="Remove Associated Part">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </Button>
                        <HBox alignment="CENTER_RIGHT" maxWidth="-Infinity" prefHeight="50.0" prefWidth="170.0">
                           <children>
                              <Button fx:id="saveButton" mnemonicParsing="false" onMouseClicked="#onSaveButtonClicked" text="Save">
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                              </Button>
                              <Region prefWidth="32.0" HBox.hgrow="ALWAYS" />
                              <Button fx:id="cancelButton" mnemonicParsing="false" onMouseClicked="#onCancelButtonClicked" text="Cancel">
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
